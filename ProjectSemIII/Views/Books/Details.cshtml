@model ProjectSemIII.Models.BookDetailView

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}

<!-- Product Detail -->
<div class="container bgwhite p-t-35 p-b-80">
    <div class="flex-w flex-sb">
        <div class="w-size13 p-t-30 respon5" style="width:40%;height:400px; margin-left:5%">
            <div class="wrap-slick3 flex-sb flex-w">
                <div class="wrap-pic-w">
                    <img src="~/Areas/Admin/Content/ImageBook/@Model.BookImage1" />
                </div>
            </div>
        </div>

        <div class="w-size14 p-t-30 respon5" style="width: calc(55% - 55px);">
            <h4 class="product-detail-name m-text16 p-b-13">
                @Html.DisplayFor(model => model.BookName)
            </h4>

            <span class="m-text17 ">
                Giá: <s>
                    <span class="block2-price m-text6 p-r-5" style="text-decoration: line-through;">
                        @Convert.ToDecimal(Model.Price).ToString("#,##0.#####") vnđ.
                    </span>
                </s>
                <div class="block2-price m-text6 p-r-5">
                    @Convert.ToDecimal(Model.Price - (Model.Price * Model.Sale) / 100).ToString("#,##0.#####") vnđ.
                </div>
            </span>


            <!--  -->
            <div class="p-t-33 p-b-60">
                <div class="flex-m flex-w p-b-10">

                    Tác giả : @Model.AuthorName

                </div>

                <div class="flex-m flex-w">

                    Nhà xuất bản: @Model.PublisherName

                </div>
                <div class="flex-m flex-w">

                    Năm xuất bản: @Model.PublishingYear

                </div>
                <div class="flex-m flex-w">

                    @if (Model.PublishingYear == 1) { <p>Còn hàng</p> }
                    else
                    { <p>Hết hàng</p>}

                </div>

                <div class="flex-r-m flex-w p-t-10">
                    <div class="w-size16 flex-m flex-w">
                        <div class="flex-w bo5 of-hidden m-r-22 m-t-10 m-b-10">
                            <button class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                            </button>

                            <input class="size8 m-text18 t-center num-product" type="number" name="num-product" value="1">

                            <button class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                            </button>
                        </div>

                        <div class="btn-addcart-product-detail size9 trans-0-4 m-t-10 m-b-10">
                            <!-- Button -->
                            <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                                Thêm vào giỏ hàng
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>

</div>
<div class="row">
    Tóm tắt nội dung: @Html.Raw(Model.Descriptions)
</div>