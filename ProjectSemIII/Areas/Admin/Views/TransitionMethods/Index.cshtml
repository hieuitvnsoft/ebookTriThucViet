@model IEnumerable<ProjectSemIII.Areas.Admin.Models.DataModel.TransitionMethod>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Danh sách phương thức thanh toán</h2>

<p>
    @Html.ActionLink("Thêm mới sách", "Create", new { },new{@class="btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TransitionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TransitionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.TransitionId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.TransitionId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.TransitionId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
