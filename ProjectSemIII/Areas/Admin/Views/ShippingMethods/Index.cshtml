@model IEnumerable<ProjectSemIII.Areas.Admin.Models.DataModel.ShippingMethod>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Hình thức vận chuyển</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ShippingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ShippingName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.ShippingId }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.ShippingId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.ShippingId },  new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
