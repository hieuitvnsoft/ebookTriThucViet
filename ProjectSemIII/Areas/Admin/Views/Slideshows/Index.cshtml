@model IEnumerable<ProjectSemIII.Areas.Admin.Models.DataModel.Slideshow>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách slides show</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", new { }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image4)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Areas/Admin/Content/ImageAds/@item.Image1" width="100" style="display:inline" />
        </td>
        <td>
            <img src="~/Areas/Admin/Content/ImageAds/@item.Image2" width="100" />
        </td>
        <td>
            <img src="~/Areas/Admin/Content/ImageAds/@item.Image3" width="100" />
        </td>
        <td>
            <img src="~/Areas/Admin/Content/ImageAds/@item.Image4" width="100" />
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.Id }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>

   

}

</table>


