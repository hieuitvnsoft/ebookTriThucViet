@model IEnumerable<ProjectSemIII.Areas.Admin.Models.DataModel.Publisher>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2><b>Danh sách nhà xuất bản</b></h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", new {  }, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PublisherName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublisherPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PublisherAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>Action</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PublisherName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublisherPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PublisherAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.PublisherId }, new { @class = "btn btn-primary" }) &#160;
            @Html.ActionLink("Chi tiết", "Details", new { id = item.PublisherId }, new { @class = "btn btn-success" }) &#160;
            @Html.ActionLink("Xóa", "Delete", new { id = item.PublisherId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
