            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th style="width:160px;text-align:center; align-items:center">Acction</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td style="text-align:center">@Html.DisplayFor(modelItem => item.CategoryId)</td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td style="text-align:center">
                @Html.DisplayFor(modelItem => item.CatgoryIdParent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryId }, new { @class = "btn btn-primary" }) &#160;
                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryId }, new { @class = "btn btn-success" }) &#160;
                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryId }, new { @class = "btn btn-danger" })
                
            </td>
        </tr>
    }

</table>


