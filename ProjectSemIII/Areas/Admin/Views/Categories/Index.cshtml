<table class="table">
    <tr>
        <th style="width:70px; text-align:center">@Html.DisplayNameFor(model => model.CategoryId)</th>

        <th style="width:300px;text-align:center">
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th style="width:150px;text-align:center">
            @Html.DisplayNameFor(model => model.CatgoryIdParent)
        </th>
